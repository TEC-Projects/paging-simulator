<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.chart.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox stylesheets="@../Css/styles.css" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.pagingsimulator.pagingsimulator.UI.Controller.SimulationController">
   <children>
      <HBox alignment="CENTER_LEFT">
         <children>
            <VBox alignment="CENTER_LEFT">
               <children>
                  <Label fx:id="simulationTitleLabel" text="SIMULATION">
                     <styleClass>
                        <String fx:value="h1" />
                        <String fx:value="strong" />
                     </styleClass></Label>
                  <Label fx:id="simulationDetailLabel" layoutX="10.0" layoutY="10.0" styleClass="h4" text="50 processes &amp; 5000 operations" />
               </children>
               <HBox.margin>
                  <Insets right="275.0" />
               </HBox.margin>
            </VBox>
            <Button fx:id="pauseSimulationButton" mnemonicParsing="false" onAction="#pauseSimulationButtonEvent" text="PAUSE SIMULATION">
               <styleClass>
                  <String fx:value="btn-danger" />
                  <String fx:value="btn" />
               </styleClass>
            </Button>
         </children>
      </HBox>
      <HBox prefHeight="550.0" prefWidth="950.0">
         <children>
            <VBox spacing="20.0">
                <padding>
                    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                </padding>
               <Label text="Optimal algorithm">
                  <styleClass>
                     <String fx:value="h4" />
                     <String fx:value="strong" />
                  </styleClass>
               </Label>
               <AreaChart fx:id="optimalRAMChart" maxHeight="150.0" prefHeight="150.0">
                 <xAxis>
                   <NumberAxis fx:id="optimalXAxis" />
                 </xAxis>
                 <yAxis>
                   <NumberAxis side="LEFT" />
                 </yAxis>
               </AreaChart>
            </VBox>
            <VBox layoutX="10.0" layoutY="10.0" spacing="20.0">
               <padding>
                  <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
               </padding>
               <children>
                  <Label text="Second chance algorithm">
                     <styleClass>
                        <String fx:value="h4" />
                        <String fx:value="strong" />
                     </styleClass>
                  </Label>
                  <AreaChart fx:id="otherRAMChart" maxHeight="150.0" prefHeight="150.0">
                     <xAxis>
                        <NumberAxis fx:id="otherXAxis" side="BOTTOM" />
                     </xAxis>
                     <yAxis>
                        <NumberAxis side="LEFT" />
                     </yAxis>
                  </AreaChart>
               </children>
            </VBox>
         </children>
         <VBox.margin>
            <Insets top="25.0" />
         </VBox.margin>
      </HBox>
   </children>
   <padding>
      <Insets bottom="50.0" left="50.0" right="50.0" top="50.0" />
   </padding>
</VBox>
